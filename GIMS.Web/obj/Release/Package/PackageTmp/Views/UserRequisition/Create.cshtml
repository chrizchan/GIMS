@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section BreadCrumbContent{
    <li><i class="fa fa-gears"></i> Administration</li>
    <a href="@Url.Action("Index", "UserRequisition")"><i class="fa fa-file-text-o"></i> User Requisition</a>
    <li class="active">
        <i class="fa fa-file-o"></i> Create
    </li>
}

@section PageTitleContent{

    <i class="fa fa fa-money"></i>User Requisition
}

@section MainContent{

<div id="userGroupInfo">
    <div class="panel panel-info">

        <div class="panel-heading">User Requisition</div>

        <div class="panel-body">

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="FirstName">First Name</label>
                        <input class="form-control" id="FirstName">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="LastName">Las Name</label>
                        <input class="form-control" id="LastName">
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Status">Status</label>
                        @Html.DropDownList("Status", new SelectList(ViewBag.Status, "Value", "Text"), "", new { @class = "form-control" })
                    </div>
                </div>                
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="ApprovedBy">Approved By</label>
                        @Html.DropDownList("ApprovedBy", new SelectList(ViewBag.Approvers, "Value", "Text"), "", new { @class = "form-control" })
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

    

    <p>
        <input type="submit" value="Add User Requisition" class="btn btn-primary" />
    </p>

}

@section scripts{


}


















