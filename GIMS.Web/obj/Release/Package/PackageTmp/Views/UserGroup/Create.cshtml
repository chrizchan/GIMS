@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section BreadCrumbContent{
    <li><i class="fa fa-gears"></i> Administration</li>
    <a href="@Url.Action("Index", "UserGroup")"><i class="fa fa-users"></i> User Group</a>
    <li class="active">
        <i class="fa fa-file-o"></i> Create
    </li>
}

@section PageTitleContent{

    <i class="fa fa fa-money"></i>User Group
}

@section MainContent{

<div id="userGroupInfo">
    <div class="panel panel-info">

        <div class="panel-heading">User Group</div>

        <div class="panel-body">

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input class="form-control" id="Name">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Code">Code</label>
                        <input class="form-control" id="Code">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="Description">Description</label>
                        <textarea class="form-control" cols="20" id="Description" name="Description" rows="3"></textarea>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

    
    @Html.Partial("UserGroupBranchPermissions")
    @Html.Partial("UserGroupMenuPermissions")
    @Html.Partial("UserGroupPricePermissions")
    @Html.Partial("UserGroupBranchPlantPermissions")

    <p>
        <input type="submit" value="Add User Group" class="btn btn-primary" />
    </p>

}

@section scripts{


}


















